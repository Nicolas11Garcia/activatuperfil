<header
  class="header  mx-auto flex flex-col items-center
py-3 min-h-[90px] text-negro sticky top-0 bg-white z-50"
>
  <div class="flex justify-between px-6 items-center min-h-[70px] max-w-[1300px] w-full">
    <a href="#inicio"><img 
      class="max-w-[100px]" src="/logo-activa-tu-perfil.webp" alt="logo-activatuperfil"/></a>
    <nav class="hidden md:flex font-medium text-sm gap-4">
      <ul class="font-medium text-sm flex gap-4">
        <li class="flex items-center">
          <a class="hover:text-primary" href="#inicio">Inicio</a>
        </li>
        <li class="flex items-center">
          <a class="hover:text-primary" href="#precios">Precios</a>
        </li>
        <li class="flex items-center">
          <a class="hover:text-primary" href="#como-comprar">¿Como comprar?</a>
        </li>
        <li class="flex items-center">
          <a class="hover:text-primary" href="#preguntas-frecuentes"
            >Preguntas frecuentes</a
          >
        </li>
      </ul>
    </nav>
    <a
      href="https://www.instagram.com/activatuperfil_oficial/"
      target="_blank"
      class="relative hidden md:flex h-[50px] w-40 items-center justify-center
       overflow-hidden rounded-xl border-2 border-transparent hover:border-secundary
        text-white transition-all text-sm font-medium
         duration-700 before:absolute before:inset-0
          before:border-0 before:border-white
           before:duration-100 before:ease-linear
            bg-secundary hover:text-secundary
             hover:before:border-[25px]"
    >
      <span class="relative z-10">Contactanos</span>
    </a>

    <button type="button" class="block md:hidden" id="open-close-menu">
      <svg
        id="open-icon-menu"
        class="w-6 h-6 text-negro"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 16 12"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h14M1 6h14M1 11h7"></path>
      </svg>

      <svg
        id="close-icon-menu"
        class="w-5 h-5 text-negro hidden"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
      </svg>
    </button>
  </div>

  <nav
    id="menu-responsive"
    class="hidden flex-col w-full gap-4 mt-2 border-b border-b-gray-300 pb-6 px-6"
  >
    <ul class="font-medium text-sm flex md:hidden flex-col gap-4">
      <li class="enlace-responsive flex items-center hover:text-primary">
        <a class="block w-full" href="#inicio">Inicio</a>
      </li>
      <li class="enlace-responsive flex items-center hover:text-primary">
        <a class="block w-full" href="#precios">Precios</a>
      </li>
      <li class="enlace-responsive flex items-center hover:text-primary">
        <a class="block w-full" href="#como-comprar">¿Como comprar?</a>
      </li>
      <li class="enlace-responsive flex items-center hover:text-primary">
        <a class="block w-full" href="#preguntas-frecuentes"
          >Preguntas frecuentes</a
        >
      </li>
    </ul>
    <a
      class="enlace-responsive block bg-secundary text-white p-2 rounded-xl text-sm"
      href="https://www.instagram.com/activatuperfil_oficial/"
      target="_blank">Contactanos</a
    >
  </nav>
</header>

<script is:inline>
  // Obtén referencias a los elementos del DOM
  const menuButton = document.getElementById("open-close-menu");
  const menu = document.getElementById("menu-responsive");
  const openIcon = document.getElementById("open-icon-menu");
  const closeIcon = document.getElementById("close-icon-menu");

  // Agrega un evento de clic al botón
  menuButton.addEventListener("click", function () {
    // Toggle entre las clases hidden y flex
    menu.classList.toggle("hidden");
    menu.classList.toggle("flex");

    // Toggle entre las clases hidden y visible para los íconos
    openIcon.classList.toggle("hidden");
    openIcon.classList.toggle("block");
    closeIcon.classList.toggle("hidden");
    closeIcon.classList.toggle("block");
  });

  function closeMenu() {
    menu.classList.remove("flex");
    menu.classList.add("hidden");

    openIcon.classList.remove("hidden");
    openIcon.classList.add("flex");

    closeIcon.classList.add("hidden");
    closeIcon.classList.remove("flex");
  }

  var enlaces = document.getElementsByClassName("enlace-responsive");

  for (var i = 0; i < enlaces.length; i++) {
    enlaces[i].addEventListener("click", function () {
      closeMenu();
    });
  }
</script>
